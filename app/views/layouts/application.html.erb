<!DOCTYPE html>
<html>
<head>
  <title>Da Yak Is That?</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <link href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/css/bootstrap.min.css" rel="stylesheet">
  <link href="//maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css" rel="stylesheet">
  <link href="//maxcdn.bootstrapcdn.com/bootswatch/3.2.0/flatly/bootstrap.min.css" rel="stylesheet">
  <style>
    body{
      margin-top: 70px;
      background-color: white;
      background-image: url('/assets/bg/blurred-background-18.jpg');
      background-repeat: no-repeat;
      background-attachment: fixed;
      background-position: center top;
      background-size: cover;
    }
  </style>
  <%= csrf_meta_tags %>
</head>
<body>
<div class="container">
 <%= nav_bar :responsive => true, :fixed => :top, :brand => "Da Yak Is That?" do %>
  <%= menu_group do %>
  <%= menu_item "Messages", root_path %>
  <%= menu_item "My Tops", my_tops_path %>
    <% end %>
<% end %>
  <div class="row">
      <%= yield %>
    </div>
</div>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <script type="text/javascript" src="//cdnjs.cloudflare.com/ajax/libs/moment.js/2.8.3/moment.min.js"></script>
  <script type="text/javascript" src="//cdnjs.cloudflare.com/ajax/libs/livestamp/1.1.2/livestamp.min.js"></script>
  
<% if !session[:latitude] and !session[:longitude] %>
  geolocateClient();
<% end %>
</body>
</html>
